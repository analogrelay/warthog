    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows; Debug) wasmdump hello_world.wasm",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/wasmdump.exe",
            "args": [
                "${workspaceFolder}/samples/hello_world.wasm"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "(Windows; Debug) loader hello_world.wasm",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/loader.exe",
            "args": [
                "${workspaceFolder}/samples/hello_world.wasm"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        }
    ]
}